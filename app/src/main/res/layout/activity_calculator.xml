<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Display EditText -->
    <EditText
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="25 + 34"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:gravity="start"
        android:padding="10dp"
        android:background="@null"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <!-- Main container for buttons -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:orientation="vertical"
        android:paddingBottom="0dp"> <!-- Removed marginTop here -->

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:weightSum="4">

            <Button
                android:id="@+id/button_percent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape"
                android:text="%"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_1p"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape"
                android:text="("
                android:textSize="35sp"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_2p"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape"
                android:text=")"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_addsub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_orange"
                android:text="+/-"
                android:textSize="35sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:weightSum="4">

            <Button
                android:id="@+id/button_7num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_dark"
                android:text="7"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_8num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_dark"
                android:text="8"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_9num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_dark"
                android:text="9"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_multi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_orange"
                android:text="*"
                android:textSize="35sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:weightSum="4">

            <Button
                android:id="@+id/button_4num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_dark"
                android:text="4"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_5num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_dark"
                android:text="5"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_6num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_dark"
                android:text="6"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_orange"
                android:text="-"
                android:textSize="35sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:weightSum="4">

            <Button
                android:id="@+id/button_1num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_dark"
                android:text="1"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_2num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_dark"
                android:text="2"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_3num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_dark"
                android:text="3"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_orange"
                android:text="+"
                android:textSize="35sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Row 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <Button
                android:id="@+id/button_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_dark"
                android:text="C"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_0num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_dark"
                android:text="0"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_dot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_dark"
                android:text="."
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>



            <Button
                android:id="@+id/button_equal"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_button_normal_shape_orange"
                android:text="="
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>